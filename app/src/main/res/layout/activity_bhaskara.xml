<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bhaskara">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="282dp"
        android:layout_height="486dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="168dp">

        <EditText
            android:id="@+id/editTextValorA"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="VALOR A:"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextValorB"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="VALOR B:"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextValorC"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="VALOR C:"
            android:inputType="number" />

        <Button
            android:id="@+id/btnCalcularBhaskara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULAR BHASKARA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>